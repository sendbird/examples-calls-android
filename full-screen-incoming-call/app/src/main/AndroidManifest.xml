<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.fullscreenincomingcall">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.USE_FULL_SCREEN_INTENT"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
        android:name="com.example.fullscreenincomingcall.BaseApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.fullscreenincomingcall.SignInActivity"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.fullscreenincomingcall.main.DialActivity"/>
        <activity android:name=".call.IncomingCallActivity"
            android:showOnLockScreen="true"
            android:showWhenLocked="true">
            <intent-filter>
                <action android:name="endIncomingCallActivity"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.fullscreenincomingcall.call.VideoCallActivity"
            android:configChanges="orientation|smallestScreenSize|screenSize|screenLayout"
            android:theme="@style/CallTheme"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
        <activity android:name="com.example.fullscreenincomingcall.call.SettingsActivity"/>
        <service android:name="com.example.fullscreenincomingcall.call.CallService"
            android:stopWithTask="false" />

        <!-- [Calls] FCM -->
        <service
            android:name="com.example.fullscreenincomingcall.fcm.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>


</manifest>