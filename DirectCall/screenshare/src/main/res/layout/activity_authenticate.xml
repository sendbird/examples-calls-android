<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AuthenticateActivity">

    <ImageView
        android:id="@+id/iv_sendbird"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_sendbird"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="100dp" />

    <TextView
        android:id="@+id/tv_sendbird_call_examples"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:lineSpacingExtra="8sp"
        android:gravity="center_horizontal"
        android:text="SendBird Calls Examples"
        app:layout_constraintTop_toBottomOf="@id/iv_sendbird"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/tv_sendbird_call_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:lineSpacingExtra="8sp"
        android:gravity="center_horizontal"
        android:text="DirectCall ScreenShare"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_sendbird_call_examples"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/et_application_id"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Application ID"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp"
        android:background="#f0f0f0"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_sendbird_call_subtitle"
        android:inputType="text"
        android:enabled="false"/>

    <EditText
        android:id="@+id/et_user_id"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="User ID"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="12dp"
        android:background="#f0f0f0"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/et_application_id"
        android:inputType="text"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_sign_in"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="20dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:padding="0dp"
        android:text="Sign in"
        app:layout_constraintTop_toBottomOf="@id/et_user_id"
        />

</androidx.constraintlayout.widget.ConstraintLayout>